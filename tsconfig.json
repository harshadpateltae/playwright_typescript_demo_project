{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
           "@frontEndLocators":["components/locators/frontEndLocators"],
           "@base-page":["fixtures/base.page"],
           "@config-reader":["components/config-reader/config.reader"],
           "@state-manager":["fixtures/state-manager"],
           "@homepage":["components/pages/homePage"],
           "@loginpage":["components/pages/loginPage"],
           "@reusable":["components/pages/reusable"],
           "@excelUtils":["components/utils/ExcelUtils"],
           "@allure":["components/reporter/Allure"],
        },
        "target": "es2021",
        "lib": [
            "dom",
            "es2021"
        ],
        "module": "commonjs",
